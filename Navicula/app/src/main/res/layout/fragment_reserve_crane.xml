<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGrey"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_reserve_crane0"
        android:background="@color/colorWhite"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/crane_start_date"
                android:id="@+id/crane_start_date"
                android:layout_gravity="left|top"
                android:textStyle="italic"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/crane_start_time"
                android:id="@+id/crane_start_time"
                android:layout_gravity="top|right"
                android:textStyle="italic"
                android:layout_marginRight="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/03/2016"
                android:id="@+id/crane_start_date_btn"
                android:layout_gravity="left|top"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-2dp"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/colorPrimary"
                android:minHeight="35dp"
                android:minWidth="80dp"
                android:textStyle="bold"
                android:textSize="18dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"
                android:id="@+id/crane_start_time_btn"
                android:layout_gravity="right|top"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="18dp"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="35dp"
                android:minWidth="60dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginRight="4dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/crane_end_date"
                android:id="@+id/crane_end_date"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/crane_end_time"
                android:id="@+id/crane_end_time"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                android:clickable="false"
                android:layout_marginRight="8dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/03/2016"
                android:id="@+id/crane_end_date_btn"
                android:layout_gravity="left|bottom"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minWidth="80dp"
                android:minHeight="35dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="-2dp"
                android:textSize="18dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"
                android:id="@+id/crane_end_time_btn"
                android:layout_gravity="right|bottom"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="35dp"
                android:minWidth="60dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_marginRight="4dp" />

        </FrameLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_reserve_crane1"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/crane_available"
                android:id="@+id/crane_not_available"
                android:layout_gravity="center_horizontal|top"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:checked="false" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/crane_not_available"
                android:id="@+id/crane_not_available"
                android:layout_gravity="center_horizontal|bottom"
                android:checked="false"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_reserve_crane2"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorWhite">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:text="@string/crane_save"
                android:id="@+id/crane_cancel"
                android:layout_gravity="right|center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:text="@string/crane_cancel"
                android:id="@+id/crane_cancel"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#0D47A1" />
        </FrameLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>