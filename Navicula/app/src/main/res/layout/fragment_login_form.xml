<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:minHeight="0dp"
    android:longClickable="false"
    android:minWidth="0dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="@string/hint_userName"
        android:allowUndo="false"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:fontFamily="garamond"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/signIn"
        android:layout_alignStart="@+id/signIn"
        android:layout_marginTop="180dp"
        android:layout_alignRight="@+id/signIn"
        android:layout_alignEnd="@+id/signIn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="@string/hint_passWord"
        android:textSize="20dp"
        android:fontFamily="garamond"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:autoText="false"
        android:textColorHighlight="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_logIn"
        android:id="@+id/signIn"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:fontFamily="garamond"
        android:focusableInTouchMode="false"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignWithParentIfMissing="false"
        android:textAlignment="center"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/action_forgotPassword"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:layout_below="@+id/signIn"
        android:layout_alignRight="@+id/signIn"
        android:layout_alignEnd="@+id/signIn"
        android:layout_alignParentTop="false"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView_signIn"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:fontFamily="Arial"
        android:textSize="45dp" />


</RelativeLayout>