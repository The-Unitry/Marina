<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/frameLayout"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-10dp">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="1dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewLeaveRemainingDescription"
                android:stretchColumns="0,1"
                android:background="@color/colorWhite">

                <TableRow>
                    <Button
                        android:id="@+id/button1"
                        android:layout_gravity="center"
                        android:text="#"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_gravity="center"
                        android:text="B | N"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_gravity="center"
                        android:text="B"
                        android:backgroundTint="#90ce00"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_gravity="center"
                        android:text="N"
                        android:backgroundTint="#de0000"
                        android:textColor="@color/colorWhite" />
                </TableRow>


            </TableLayout>



            </android.support.v7.widget.CardView>




        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/frameLayout1"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-30dp">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:elevation="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite">


                    <Button
                        android:layout_width="90dp"
                        android:layout_height="114dp"
                        android:text="Box huren"
                        android:id="@+id/button"
                        android:layout_gravity="right|center_vertical"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="#111"
                        android:id="@+id/textView5"
                        android:layout_gravity="left|top"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Lenght x Width x Height"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textAlignment="center"
                        android:textSize="23dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="84dp"
                        android:layout_height="135dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="50m  x  60m   x 60m"
                        android:id="@+id/textView7"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="23dp"
                        android:layout_marginLeft="-50dp"
                        android:layout_marginBottom="-10dp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:id="@+id/imageView2"
                        android:layout_gravity="top|center_horizontal|right"
                        android:src="@drawable/energy"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:id="@+id/imageView3"
                        android:layout_gravity="right|bottom"
                        android:src="@drawable/drop"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="5dp" />

                </FrameLayout>


            </android.support.v7.widget.CardView>


        </FrameLayout>

    </LinearLayout>
</ScrollView>